# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_finance
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# WhatsApp Configuration
WHATSAPP_SESSION_DATA_PATH=./whatsapp-session

# Notification Configuration
NOTIFICATION_EMAIL_FROM=noreply@whatsappfinance.com
NOTIFICATION_EMAIL_SERVICE=smtp
NOTIFICATION_EMAIL_HOST=smtp.example.com
NOTIFICATION_EMAIL_PORT=587
NOTIFICATION_EMAIL_USER=your_email_user
NOTIFICATION_EMAIL_PASS=your_email_password

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_AUTO_TRANSACTION_PROCESSING=true
ENABLE_TRANSACTION_ANALYTICS=true

# Scheduler Configuration
RECURRING_TRANSACTION_CHECK_INTERVAL=3600000
NOTIFICATION_CHECK_INTERVAL=300000

# Currency Configuration
DEFAULT_CURRENCY=IDR
CURRENCY_DECIMAL_PLACES=2

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=120

# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=900000

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_EXPIRY=86400000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_CRON=0 0 * * *
BACKUP_PATH=./backups

# Debug Configuration
DEBUG_MODE=false
DEBUG_WHATSAPP=false
DEBUG_DATABASE=false
DEBUG_NOTIFICATIONS=false

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
SENTRY_DSN=your_sentry_dsn_here

# Third-party Integration Keys (if needed)
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_region
